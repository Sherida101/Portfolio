{
  "private": true,
  "name": "portfolio-website",
  "version": "0.0.1",
  "homepage": "https://sherida101.github.io/Portfolio",
  "scripts": {
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -b gh-pages -d build",
    "dev": "npm run free-port && node dev-file.js",
    "eject": "react-scripts eject",
    "free-port": "fuser -k 3000/tcp || true",
    "lhci": "lhci autorun",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:spell": "cspell \"src/**/*\"",
    "prepare": "husky install",
    "spellcheck": "cspell \"src/**/*\" --no-progress --no-summary",
    "start": "npm run free-port && react-scripts start",
    "test": "echo \"Test script temporarily disabled\"",
    "update-publications": "npm run node scripts/updatePublications.js"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "baseui": "^14.0.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "dotenv": "^16.4.5",
    "framer-motion": "^10.12.16",
    "gh-pages": "^6.3.0",
    "graphql": "^16.11.0",
    "lucide-react": "^0.263.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.10",
    "react-chartjs-2": "^5.3.0",
    "react-collapsible": "^2.10.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "react-spring": "^9.5.5",
    "styled-components": "^6.1.19",
    "styletron-engine-atomic": "^1.6.2",
    "styletron-react": "^6.1.1",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@cspell/dict-en-gb": "^5.0.11",
    "@cspell/dict-python": "^4.2.19",
    "@cspell/dict-software-terms": "^5.1.5",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@iconify/icons-logos": "^1.2.36",
    "@iconify/react": "^6.0.0",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^30.0.5",
    "cspell": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-package-json": "^2.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
